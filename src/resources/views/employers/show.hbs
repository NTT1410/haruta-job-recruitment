<div class="card mb-3">
	<div class="row g-0">
		<div class="col-md-1 justify-content-center d-flex align-items-center">
			<img
				src={{user.avatar}}
				class="rounded-circle shadow-2-strong"
				height="75"
				alt="Black and White Portrait of a Man"
				loading="lazy"
			/>
		</div>
		<div class="col-md-10">
			<div class="card-body">
				<h5 class="card-title">{{user.first_name}} {{user.last_name}}</h5>
				<p class="card-text">
					<small class="text-muted">Last updated 3 mins ago</small>
				</p>
			</div>
		</div>
	</div>

</div>
<div class="row g-0">
	<div class="card p-3">
		<div class="row mt-3">
			<div class="col">
				<!-- Name input -->
				<div class="form-outline">
					<input
						type="text"
						id="id"
						class="form-control"
						value={{user._id}}
						readonly
						disabled
					/>
					<label class="form-label" for="id">User ID</label>
				</div>
			</div>
		</div>
		<hr />
		<div class="row">
			<div class="col">
				<!-- Name input -->
				<div class="form-outline">
					<input
						type="text"
						id="first_name"
						class="form-control"
						value={{user.first_name}}
					/>
					<label class="form-label" for="first_name">First_name</label>
				</div>
			</div>
			<div class="col">
				<!-- Email input -->
				<div class="form-outline">
					<input
						type="text"
						id="last_name"
						class="form-control"
						value={{user.last_name}}
					/>
					<label class="form-label" for="last_name">Last_name</label>
				</div>
			</div>
		</div>
		<hr />
		<div class="row">
			<div class="col">
				<!-- Name input -->
				<div class="form-outline">
					<input
						type="email"
						id="email"
						class="form-control"
						value={{user.email}}
					/>
					<label class="form-label" for="email">Email address</label>
				</div>
			</div>
			<div class="col">
				<!-- Email input -->
				<div class="form-outline">
					<input
						type="text"
						id="phone"
						class="form-control"
						value={{user.phone}}
					/>
					<label class="form-label" for="phone">Phone number</label>
				</div>
			</div>
		</div>
		<hr />
		<div class="row">
			<div class="col">
				<!-- Name input -->
				<div class="form-outline">
					<input
						type="text"
						id="username"
						class="form-control"
						value={{user.username}}
					/>
					<label class="form-label" for="username">Username</label>
				</div>
			</div>
			<div class="col">
				<!-- Email input -->
				<div class="form-outline">
					<input
						type="password"
						id="password"
						class="form-control"
						value={{user.password}}
					/>
					<label class="form-label" for="password">Password</label>
				</div>
			</div>
		</div>
		<hr />
		<div class="row">
			<div class="col">
				<select class="select" id="active" name="active">
					{{#if user.active}}
						<option value="true" selected>Active</option>
						<option value="false">Inactive</option>
					{{else}}
						<option value="true">Active</option>
						<option value="false" selected>Inactive</option>
					{{/if}}
				</select>
				<label for="active" class="form-label select-label">Status</label>
			</div>
			<div class="col">
				<div class="form-outline datepicker" data-mdb-inline="true">
					<input
						type="text"
						class="form-control"
						id="day_of_birth"
						name="day_of_birth"
						{{!-- value={{user.day_of_birth}} --}}
						value={{{dateFormat user.day_of_birth timeStamp}}}
					/>
					<label for="day_of_birth" class="form-label">Day Of Birth</label>
				</div>
			</div>
		</div>
		<div class="row mt-3 justify-content-end">
			<div class="col-1">
				<div class="">
					<button
						class="btn btn-primary btn-rounded mb-4"
						id="cancel"
						onclick="history.back()"
					>Cancel</button>
				</div>
			</div>
			<div class="col-1">
				<div class="">
					<button
						onclick="updateUser()"
						class="btn btn-success btn-rounded btn-block mb-4"
						id="update-employer"
					>Save</button>
				</div>
			</div>
		</div>
	</div>
</div>